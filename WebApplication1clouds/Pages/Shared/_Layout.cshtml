<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1clouds</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1clouds.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="navbar">
            <div class="container">
                <a class="logo" href="#"><span>My_Cinema</span></a>

                <img id="mobile_cta" class="mobile_menu" src="assets/menu.svg" alt="menu button">

                <nav>
                    <img id="mobile_exit" class="mobile_menu_exit" src="assets/exit.svg" alt="close navigation">
                    <ul class="primary_nav">
                        <li class="current"><a href="#">Schedule</a></li>
                        <li><a href="index.html">Films</a></li>
                        <li class="search_Box"><input id="search-box" type="text" placeholder="Search..."></li>
                    </ul>

                    <ul class="secondary_nav">
                        <li class="location"><a href="#">Location</a></li>
                        <li><a href="http://127.0.0.1:5500/src/Login.html">Login</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - WebApplication1clouds - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>